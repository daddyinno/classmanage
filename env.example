# 服務器配置
PORT=3000
BASE_PATH=

# 環境設置
NODE_ENV=production

# 備份配置 - 雲端備份 (可選)
# 可以使用 Dropbox、Google Drive 或其他支持 webhook 的服務
BACKUP_WEBHOOK_URL=
BACKUP_API_KEY=

# 郵件備份配置
# SMTP 服務器設置（Gmail 示例）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 備份郵件設置
BACKUP_FROM_EMAIL=your-email@gmail.com
BACKUP_TO_EMAIL=backup-receiver@gmail.com
BACKUP_CC_EMAIL=
BACKUP_BCC_EMAIL=

# 數據庫配置
DB_PATH=./classroom.db

# 安全配置
# 建議在生產環境中設置更強的密碼
TEACHER_PASSWORD=28915063

# 日誌配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 自動備份設置
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
MAX_LOCAL_BACKUPS=7

# CORS 設置 (如果需要跨域訪問)
CORS_ORIGIN=*
