{
  "name": "classmanage-gamification",
  "version": "1.0.0",
  "description": "班房管理系统 - 类似ClassDojo的养成游戏",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "backup": "node backup.js backup",
    "backup:local": "node backup.js backup-local",
    "backup:email": "node backup.js backup-email",
    "backup:restore": "node backup.js restore",
    "backup:list": "node backup.js list",
    "backup:check": "node backup.js check",
    "backup:cron": "node cron-backup.js",
    "email:test": "node backup.js email-test",
    "email:config": "node backup.js email-config",
    "email:send": "node backup.js email-send",
    "setup:cron": "echo '0 2 * * * cd $(pwd) && npm run backup:cron' | crontab -",
    "setup": "node setup.js",
    "backup:service": "node backup-service.js",
    "backup:cron-job": "node backup-cron-job.js",
    "render:setup": "node render-backup-setup.js",
    "render:manager": "node render-backup-manager.js",
    "db:restore": "node db-restore-on-startup.js",
    "db:check": "node -e \"const manager = require('./db-restore-on-startup'); new manager().isDatabaseValid().then(valid => console.log(valid ? '✅ 數據庫正常' : '❌ 數據庫異常'))\""
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "path": "^0.12.7",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "教育",
    "游戏化",
    "班级管理",
    "积分系统"
  ],
  "author": "ClassManage Team",
  "license": "MIT"
}
